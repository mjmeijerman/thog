                    </th>
                    <th align="right">D
                    </th>
                    <th width="20">
                    </th>
                    <th align="right">N
                    </th>
                    <th width="20">
                    </th>
                    <th align="right" width="50">Totaal
                    </th>
                    <th width="10">
                    </th>
                </tr>
                {% for turnster in turnsters.Balk %}
                    <tr>
                        <td align="center">{{ turnster.wedstrijdnummer }}
                        </td>
                        <td align="left" colspan="5">{{ turnster.naam }}
                        </td>
                        <td align="right">{{ turnster.dBalk }}
                        </td>
                        <td>
                        </td>
                        <td align="right">{{ turnster.nBalk }}
                        </td>
                        <td>
                        </td>
                        <td align="right"><b>{{ turnster.totaalBalk|number_format(3, ",", ".") }}</b>
                        </td>
                        <td>
