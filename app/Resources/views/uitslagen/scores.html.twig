                <tr id="toestel">
                    <td colspan="10"><h2>VLOER</h2>
                    </td>
                </tr>
                <tr>
                    <th align="center" width="40">#
                    </th>
                    <th align="left" width="200" colspan="5">Naam
                    </th>
                    <th align="right">D
