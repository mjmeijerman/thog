{% extends 'inloggen/base.html.twig' %}

{% block body %}
	<div id="inloggen">
		<h1>Inloggen</h1>
		{% if error %}
			<div><span style="color:red;">{{ error.messageKey|trans(error.messageData, 'security') }}</span></div>
		{% endif %}

		<form action="{{ path('login_check') }}" method="post">
			<table class="login_tabel" align="center">
				<tr>
					<td><input type="text" id="username" name="_username" class="username" placeholder="Gebruikersnaam" value="{{ last_username }}" /></td>
				</tr>
				<tr>
					<td>
						<input type="password" id="password" class="password" placeholder="&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;"  name="_password" /><br />
						<span class="forgot_password"><a href="{{ path('getNewPassPage') }}">Wachtwoord vergeten?</a></span>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</td>
				</tr>
				<tr>
					<td align="center">
						<button type="submit" class="button">Inloggen</button>
					</td>
				</tr>
				<tr>
					<td class="remember_me">
						<input type="checkbox" id="remember_me" name="_remember_me" />
						<label for="remember_me">Ingelogd blijven</label>
					</td>
				</tr>
			</table>
		</form>
	</div>
{% endblock %}